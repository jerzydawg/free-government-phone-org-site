---
/**
 * Minimal Footer - Ultra-clean, single-line footer
 * Just logo, essential links, and copyright
 */
import { getSiteName, getDomain, getDesignDNA, getKeyword } from '../../lib/site-config';
import { getFooterVariations, getNavVariations } from '../../lib/city-content-variations';
import { getLifelineProgramText, getACPProgramText, getTribalProgramsText, getStateProgramsText, getContactUsText, getAllStatesText } from '../../lib/microcopy-variations';

const siteName = getSiteName();
const domain = getDomain();
const keyword = getKeyword();
const designDNA = getDesignDNA();
const footerContent = getFooterVariations(domain, keyword);
const navContent = getNavVariations(domain);
const readableTextColor = getReadableTextColor(designDNA.colors.text);
---

<footer class="bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Logo -->
      <div class="flex items-center">
        <span class="font-semibold text-gray-900" style={`color: #111827 !important;`}>{siteName}</span>
      </div>

      <!-- Links -->
      <div class="flex items-center space-x-6">
        <a href="/eligibility" class="text-sm hover: transition-colors text-gray-900" style={`color: #111827 !important;`}>{navContent.navItems.find(i => i.href === '/eligibility')?.label || 'Eligibility'}</a>
        <a href="/providers" class="text-sm hover: transition-colors text-gray-900" style={`color: #111827 !important;`}>{navContent.navItems.find(i => i.href === '/providers')?.label || 'Providers'}</a>
        <a href="/faq" class="text-sm hover: transition-colors text-gray-900" style={`color: #111827 !important;`}>{navContent.navItems.find(i => i.href === '/faq')?.label || 'FAQ'}</a>
      </div>

      <!-- Copyright -->
      <p class="text-sm text-gray-900" style={`color: #111827 !important;`}>
        {footerContent.copyright}
      </p>
    </div>
    
    <!-- Disclaimer -->
    <div class="mt-6 pt-4 border-t border-gray-100">
      <p class="text-xs text-center max-w-4xl mx-auto text-gray-700" style={`color: #374151 !important;`}>
        {footerContent.disclaimer}
      </p>
    </div>
  </div>
</footer>


