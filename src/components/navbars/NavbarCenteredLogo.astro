---
/**
 * Centered Logo Navbar - Logo in center, nav split on both sides
 * Modern, balanced layout for brand-focused sites
 */
import { getDesignDNA, getSiteName, getKeyword, getDomain } from '../../lib/site-config';
import { getNavVariations } from '../../lib/city-content-variations';
import { getEligibilityNavText, getGetStartedCTAText } from '../../lib/microcopy-variations';

const designDNA = getDesignDNA();
const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const navContent = getNavVariations(domain);
---

<nav class="bg-white shadow-lg sticky top-0 z-40">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Left Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="nav-link font-medium transition-colors duration-200 text-gray-900" style={`color: #111827 !important;`}>Home</a>
        <a href="/apply" class="nav-link font-medium transition-colors duration-200 text-gray-900" style={`color: #111827 !important;`}>Programs</a>
        <a href="/eligibility" class="nav-link font-medium transition-colors duration-200 text-gray-900" style={`color: #111827 !important;`}>{getEligibilityNavText(domain)}</a>
      </div>

      <!-- Centered Logo -->
      <div class="flex items-center justify-center">
        <a href="/" class="flex items-center">
          <div class="text-lg font-bold text-gray-900" style={`color: #111827 !important;`}>{siteName}</div>
        </a>
      </div>

      <!-- Right Navigation & CTA -->
      <div class="hidden md:flex items-center space-x-6">
        <a href="/providers" class="nav-link font-medium transition-colors duration-200 text-gray-900" style={`color: #111827 !important;`}>Providers</a>
        <a href="/faq" class="nav-link font-medium transition-colors duration-200 text-gray-900" style={`color: #111827 !important;`}>FAQ</a>
        <a href="/apply" class="no-underline font-bold py-2 px-5 rounded-full shadow-lg transform hover:scale-105 transition-all duration-200" style={`background: ${designDNA.colors.accent}; color: ${designDNA.colors.textOnPrimary || '#fff'};`}>
          {navContent.ctaButton}
        </a>
      </div>
    </div>
  </div>
</nav>


