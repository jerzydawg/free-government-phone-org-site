---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const pageTitle = "Page Not Found | Free Government Phone";
const metaDescription = "The page you're looking for doesn't exist. Find free government phone programs and assistance options to get your free phone and service.";
---

<Layout 
  title={pageTitle}
  description={metaDescription}
  canonical={`${siteURL}/404`}
  noindex={true}
>
  <!-- Breadcrumb Navigation -->
  <nav class="bg-gray-50 py-3" aria-label="Breadcrumb">
    <div class="max-w-6xl mx-auto px-4">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-[var(--color-primary)] hover:underline">Home</a>
        </li>
        <li class="text-gray-500">›</li>
        <li class="text-gray-600">404 Error</li>
      </ol>
    </div>
  </nav>

  <main class="max-w-6xl mx-auto px-4 py-8">
    <!-- Error Message Section -->
    <section class="text-center mb-12">
      <div class="mb-8">
        <div class="inline-block p-6 bg-gradient-to-r from-red-100 to-orange-100 rounded-full mb-6">
          <svg class="w-16 h-16" style="color: var(--color-primary)" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <h1 class="text-5xl font-bold text-gray-800 mb-4">Free Government Phone</h1>
        <div class="text-8xl font-bold text-gray-300 mb-4">404</div>
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Oops! Page Not Found</h2>
        <p class="text-gray-600 max-w-md mx-auto">The page you're searching for has moved or doesn't exist. But don't worry - we can still help you find the free phone assistance you need.</p>
      </div>
    </section>

    <!-- Search Suggestion Section -->
    <section class="mb-12">
      <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Find Your Free Phone Program</h2>
        <p class="text-gray-600 mb-6 text-center">Looking for government phone assistance? Start your application now and get connected with free phone service in minutes.</p>
        
        <div class="text-center mb-8">
          <a 
            href="/apply" 
            class="bg-gradient-to-r from-orange-600 to-orange-700 hover:from-orange-700 hover:to-orange-800 text-white font-bold py-3 px-6 rounded-xl shadow-lg inline-block transform hover:scale-105 transition-all duration-200"
          >
            START APPLICATION NOW
          </a>
          <p class="text-sm text-gray-500 mt-2">No cost • No credit check required • Instant qualification check</p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center" style="background-color: var(--color-primary)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Free Phone</h3>
            <p class="text-gray-600 text-sm">Get a brand new smartphone at no cost through government assistance programs.</p>
          </div>
          
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center" style="background-color: var(--color-primary)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15.586 13H14a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Free Service</h3>
            <p class="text-gray-600 text-sm">Unlimited talk, text, and data plans included with your free government phone.</p>
          </div>
          
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full flex items-center justify-center" style="background-color: var(--color-primary)">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-800 mb-2">Quick Approval</h3>
            <p class="text-gray-600 text-sm">Most applications are approved instantly when you meet basic government assistance requirements.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Helpful Links Section -->