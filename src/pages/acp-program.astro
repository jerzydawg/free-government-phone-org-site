---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = `${keyword} - ACP Free Internet & Phone`;
const description = "Get free high-speed internet and phone service through the ACP program. Apply now for government assistance with monthly internet bills and free smartphone access.";
const currentURL = `${siteURL}/acp-program`;

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Article",
      "headline": "ACP Internet Program: Get Your Free Phone and Internet Access",
      "description": "Learn how the ACP program provides free high-speed internet and phone services to qualifying households. Complete guide to benefits and application.",
      "image": `${siteURL}/images/acp-program-benefits.jpg`,
      "author": {
        "@type": "Organization",
        "name": siteName
      },
      "publisher": {
        "@type": "Organization",
        "name": siteName,
        "logo": {
          "@type": "ImageObject",
          "url": `${siteURL}/logo.png`
        }
      },
      "datePublished": "2025-12-12",
      "dateModified": "2025-12-12",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": currentURL
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "How much internet speed does ACP provide for free?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "ACP gives you high-speed internet with download speeds of at least 100 Mbps. This is fast enough for streaming, video calls, work from home, and online learning."
          }
        },
        {
          "@type": "Question",
          "name": "Can low-income families combine ACP with other assistance programs?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, you can use ACP benefits alongside other government assistance like SNAP, Medicaid, or housing assistance. These programs work together to reduce your monthly expenses."
          }
        },
        {
          "@type": "Question",
          "name": "What happens to my ACP benefits if I move to a different state?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Your ACP benefits stay with you when you move. Just update your address with your service provider within 30 days of moving to keep getting your monthly discount."
          }
        },
        {
          "@type": "Question",
          "name": "How long does it take to start receiving ACP internet benefits?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Once approved, most people start getting their ACP discount within 1-2 weeks. Your service provider will contact you to set up installation and activate your benefits."
          }
        }
      ]
    },
    {
      "@type": "HowTo",
      "name": "How to Get ACP Free Internet and Phone",
      "description": "Step-by-step process to apply for and receive ACP benefits for free internet and phone service.",
      "step": [
        {
          "@type": "HowToStep",
          "name": "Confirm Your Household Qualifies",
          "text": "Check if your family income is at or below 200% of Federal Poverty Guidelines or if you receive qualifying benefits like SNAP, Medicaid, or SSI."
        },
        {
          "@type": "HowToStep",
          "name": "Gather Required Documents",
          "text": "Collect your ID, proof of income, and benefit award letters. You'll need these to verify your eligibility for the program."
        },
        {
          "@type": "HowToStep",
          "name": "Submit Your ACP Application",
          "text": "Apply online at acpbenefit.org or mail a paper application. The process typically takes 7-10 business days for approval."
        },
        {
          "@type": "HowToStep",
          "name": "Choose Your Internet Provider",
          "text": "Pick from participating providers in your area. Many offer additional discounts beyond the standard ACP benefit amount."
        }
      ]
    },
    {
      "@type": "GovernmentService",
      "name": "ACP Internet Assistance Program",
      "description": "Federal program providing monthly internet discounts and device support to help bridge the digital divide for low-income households.",
      "provider": {
        "@type": "GovernmentOrganization",
        "name": "Federal Communications Commission"
      },
      "audience": {
        "@type": "Audience",
        "name": "Low-income households and families receiving federal assistance"
      },
      "serviceOutput": "Monthly internet discount up to $30 and free or discounted devices",
      "availableChannel": {
        "@type": "ServiceChannel",
        "serviceUrl": "https://acpbenefit.org",
        "servicePhone": "877-384-2575"
      }
    }
  ]
};
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  
  <div class="bg-gradient-to-b from-blue-50 to-white">
    <!-- Breadcrumb Navigation -->
    <nav class="bg-white shadow-sm border-b" aria-label="Breadcrumb">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <ol class="flex items-center space-x-2 py-4 text-sm">
          <li><a href="/" class="text-[var(--color-primary)] hover:underline">Home</a></li>
          <li><span class="text-gray-400">/</span></li>
          <li><span class="text-gray-600">ACP Program</span></li>
        </ol>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{keyword}</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Get up to $30 off your monthly internet bill plus a free smartphone through the ACP program. No credit checks, no hidden fees.</p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content Column -->
        <div class="lg:col-span-2">
          <!-- Intro Section -->
          <section class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <p class="text-lg text-gray-700 mb-4">The Affordable Connectivity Program transforms how families access essential internet and phone services. This federal program cuts your monthly internet costs while providing access to devices that keep you connected to work, school, and family.</p>
            <p class="text-gray-700 mb-4">Over 23 million households have already discovered how <span style="color: var(--color-primary)">Free Government Phone</span> programs through ACP make high-speed internet affordable. The program works with major providers nationwide to deliver reliable service without long-term contracts or credit requirements.</p>
            <p class="text-gray-700">Your household could qualify today based on income levels or participation in existing benefit programs. The application takes minutes to complete, and approval typically happens within days.</p>
          </section>

          <!-- What is ACP Section -->
          <section class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Understanding the ACP Internet Program</h2>
            <p class="text-gray-700 mb-4">ACP stands for Affordable Connectivity Program, a government initiative that makes internet and phone access possible for families who couldn't afford it otherwise. Unlike temporary assistance, this program provides ongoing monthly support to keep your family connected.</p>
            <p class="text-gray-700 mb-4">The program emerged from years of research showing that internet access directly impacts job opportunities, educational success, and healthcare access. By removing financial barriers, ACP helps bridge the digital divide affecting millions of American families.</p>
            <p class="text-gray-700">Participants receive their benefits through existing internet service providers, making the transition seamless. Your <span style="color: var(--color-primary)">Free Government Phone</span> services integrate with the same network infrastructure that serves all customers, ensuring reliable performance.</p>
          </section>

          <!-- What You Get Section -->
          <section class="bg-white rounded-xl shadow-lg p-6 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Complete ACP Benefits Package</h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="border-l-4 border-[var(--color-primary)] pl-4">
                <h3 class="font-semibold text-gray-900 mb-2">Monthly Internet Savings</h3>
                <p class="text-gray-700">Save up to $30 each month on high-speed internet service. Many providers offer plans that become completely free with your ACP benefit.</p>
              </div>
              <div class="border-l-4 border-[var(--color-primary)] pl-4">
                <h3