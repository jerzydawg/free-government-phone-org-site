---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const pageTitle = `Lifeline Free Phone Program - ${siteName}`;
const description = "Learn how to get your free Lifeline phone with monthly service. Check eligibility requirements, discover benefits, and apply for free government phone assistance today.";
---

<Layout title={pageTitle} description={description}>
  <div class="bg-gradient-to-b from-blue-50 to-white min-h-screen">
    <!-- Breadcrumb -->
    <nav class="container mx-auto px-4 py-4 text-sm">
      <ol class="flex items-center space-x-2 text-gray-600">
        <li><a href="/" class="text-[var(--color-primary)] hover:underline">Home</a></li>
        <li class="flex items-center">
          <svg class="w-3 h-3 mx-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span>Lifeline Program</span>
        </li>
      </ol>
    </nav>

    <!-- Hero Section -->
    <section class="container mx-auto px-4 py-8">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Free Government Phone</h1>
        <p class="text-xl text-gray-700 mb-8">Get your free phone and monthly service through the federal Lifeline program. No contracts, no credit checks, and completely free for eligible households.</p>
        <a href="/apply" class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-gray-900 font-bold py-3 px-6 rounded-xl shadow-lg inline-block">
          Verify Your Eligibility Now
        </a>
        <p class="text-sm text-gray-600 mt-3">Over 9 million Americans already have free phones</p>
      </div>
    </section>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        
        <!-- What is Lifeline Section -->
        <section class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Understanding the Federal Lifeline Program</h2>
          
          <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <p class="text-gray-700 text-lg mb-4">
              The Lifeline program helps millions of Americans stay connected by providing free phones and monthly service at no cost. This federal assistance runs through the FCC and partners with approved wireless carriers nationwide.
            </p>
            
            <p class="text-gray-700 mb-4">
              Every eligible household can receive one <strong>Free Government Phone</strong> with monthly data and calling minutes included. The program operates in all 50 states and US territories, making essential communication accessible to low-income families.
            </p>
            
            <p class="text-gray-700">
              Since launching decades ago, Lifeline has evolved to meet modern needs. Today's free phones include texting, data plans, and smartphone features that help people apply for jobs, access healthcare, and stay connected with family.
            </p>
          </div>
        </section>

        <!-- What You Get Section -->
        <section class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Your Free Phone Benefits Include</h2>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Free Smartphone</h3>
              </div>
              <p class="text-gray-700">Brand new Android smartphone with all essential features including camera, GPS, and app access.</p>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-lg p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Monthly Service</h3>
              </div>
              <p class="text-gray-700">Unlimited texting plus talk minutes and mobile data every month at no charge to you.</p>
            </div>

            <div class="bg-gradient-to-br from-purple-50 to-pink-100 rounded-lg p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">No Hidden Fees</h3>
              </div>
              <p class="text-gray-700">Zero activation fees, no monthly bills, no contracts, and no credit checks required.</p>
            </div>

            <div class="bg-gradient-to-br from-yellow-50 to-orange-100 rounded-lg p-6">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-full flex items-center justify-center mr-4" style="background-color: var(--color-primary)">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900">Nationwide Coverage</h3>
              </div>
              <p class="text-gray-700">Works anywhere in the US with reliable network coverage from major wireless carriers.</p>
            </div>
          </div>
        </section>

        <!-- Eligibility Section -->
        <section class="mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb