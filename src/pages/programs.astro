---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = `${keyword} - All Free Phone Programs | ${siteName}`;
const description = `Discover every free phone program available in 2025. Compare Lifeline, ACP, and state-specific programs to find the best free government phone option for your needs.`;
---

<Layout title={title} description={description}>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "Complete Overview: Every Free Phone Program Available Today",
    "description": "Explore all available free government phone programs including federal and state options to help eligible households stay connected.",
    "author": {
      "@type": "Organization",
      "name": siteName
    },
    "publisher": {
      "@type": "Organization",
      "name": siteName
    },
    "datePublished": "2025-12-12",
    "dateModified": "2025-12-12",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": `${siteURL}/programs`
    }
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How many different free phone programs can I apply for at once?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Most households can only receive one federal program benefit at a time, though some state programs may offer additional options. Check with each program to understand specific eligibility rules."
        }
      },
      {
        "@type": "Question", 
        "name": "What's the difference between Lifeline and ACP programs?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Lifeline provides monthly discounts on phone service, while ACP (Affordable Connectivity Program) offers internet and device discounts. Both programs serve low-income households but have different benefits."
        }
      },
      {
        "@type": "Question",
        "name": "Are there special programs for seniors or veterans?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, many states offer specialized free phone programs for seniors, veterans, and disabled individuals. These programs often provide additional benefits beyond federal options."
        }
      },
      {
        "@type": "Question",
        "name": "Which program offers the newest smartphones?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Program phone offerings vary by provider and location. Research multiple providers in your area to compare available devices and features before choosing."
        }
      }
    ]
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "HowTo",
    "name": "How to Choose the Right Free Phone Program",
    "step": [
      {
        "@type": "HowToStep",
        "name": "Review Your Household Income",
        "text": "Calculate your total household income and compare it to federal poverty guidelines to determine which programs you might qualify for."
      },
      {
        "@type": "HowToStep", 
        "name": "Identify Available Programs",
        "text": "Research federal programs like Lifeline and ACP, plus any state-specific options available in your area."
      },
      {
        "@type": "HowToStep",
        "name": "Compare Program Benefits",
        "text": "Look at what each program offers - monthly service discounts, free devices, data allowances, and additional features."
      },
      {
        "@type": "HowToStep",
        "name": "Submit Your Application",
        "text": "Choose the program that best fits your needs and complete the application process with required documentation."
      }
    ]
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
