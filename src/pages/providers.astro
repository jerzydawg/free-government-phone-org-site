---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const pageTitle = `${keyword} - Top Free Phone Providers | ${siteName}`;
const pageDescription = `Compare the best free government phone providers. Find the right company for your Free Government Phone service with detailed provider reviews and coverage maps.`;

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Article",
      "headline": "Top Free Government Phone Service Providers - Complete Comparison",
      "description": "Compare leading providers offering Free Government Phone services to find the best coverage and features for your area.",
      "author": {
        "@type": "Organization",
        "name": siteName,
        "url": siteURL
      },
      "publisher": {
        "@type": "Organization",
        "name": siteName,
        "url": siteURL
      },
      "datePublished": "2025-12-12",
      "dateModified": "2025-12-12",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": `${siteURL}/providers`
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Which providers offer the best Free Government Phone coverage?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Leading providers like Safelink Wireless, Assurance Wireless, and TruConnect offer nationwide coverage with different network partners. Coverage quality depends on your specific location and the underlying carrier network each provider uses."
          }
        },
        {
          "@type": "Question",
          "name": "Can I switch between free phone providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, you can change providers if you're not satisfied with service quality or coverage. Contact your new preferred provider to initiate the transfer process while maintaining your Lifeline benefits."
          }
        },
        {
          "@type": "Question",
          "name": "Do all providers offer the same phone models?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No, phone selection varies significantly between providers. Some offer basic flip phones while others provide smartphones with internet access. Research each provider's current device options before making your choice."
          }
        },
        {
          "@type": "Question",
          "name": "How do I compare data plans between providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Compare monthly data allowances, text message limits, and talk time minutes. Some providers offer unlimited talk and text with varying data amounts, while others provide different combinations of services."
          }
        }
      ]
    },
    {
      "@type": "HowTo",
      "name": "How to Select the Right Free Government Phone Provider",
      "description": "Step-by-step guide to comparing and choosing the best provider for your Free Government Phone service.",
      "step": [
        {
          "@type": "HowToStep",
          "name": "Research Network Coverage",
          "text": "Check which cellular networks operate strongest in your area. Each provider partners with different major carriers, so coverage quality varies by location and provider choice."
        },
        {
          "@type": "HowToStep",
          "name": "Compare Available Devices",
          "text": "Review phone models offered by each provider. Some focus on basic calling features while others provide modern smartphones with internet capabilities and apps."
        },
        {
          "@type": "HowToStep",
          "name": "Evaluate Service Plans",
          "text": "Examine monthly allowances for data, texts, and calling minutes. Different providers structure their free plans with varying combinations of these essential services."
        },
        {
          "@type": "HowToStep",
          "name": "Assess Customer Support",
          "text": "Research provider reputation for customer service quality. Read reviews about technical support responsiveness and problem resolution effectiveness."
        }
      ]
    }
  ]
};
---

<Layout title={pageTitle} description={pageDescription}>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Breadcrumb Navigation -->
  <nav class="bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 py-3 text-sm">
        <a href="/" class="text-[var(--color-primary)] hover:underline">Home</a>
        <span class="text-gray-500">/</span>
        <span class="text-gray-600">Providers</span>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-50 to-indigo-100 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Free Government Phone</h1>
      <p class="text-xl text-gray-700 mb-8">Compare top providers to find the perfect free phone service for your needs</p>
    </div>
  </section>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Introduction -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Finding the Right Provider for Your Needs</h2>
      <p class="text-lg text-gray-700 mb-4">
        Getting your Free Government Phone means choosing from several qualified providers, each offering unique advantages and coverage areas. The Lifeline program works with multiple wireless companies to ensure you have options that fit your specific location and communication needs.
      </p>
      <p class="text-lg text-gray-700">
        Not all providers operate in every state, and service quality can vary significantly based on your address. Understanding each company's strengths helps you make an informed decision about which provider delivers the best value for your Free Government Phone service.
      </p>
    </section>

    <!-- Top Providers -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Leading Free Phone Service Companies</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        
