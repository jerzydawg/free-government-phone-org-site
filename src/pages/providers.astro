            <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg" style="background-color: var(--color-primary)">
              S
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold text-gray-900">Safelink Wireless</h3>
              <p class="text-gray-600">TracFone Network</p>
            </div>
          </div>
          <ul class="space-y-2 text-gray-700 mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Nationwide coverage
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Smartphone options available
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Monthly data allowances
            </li>
          </ul>
          <div class="text-sm text-gray-600">
            <strong>Best for:</strong> Rural areas with TracFone coverage
          </div>
        </div>

        <!-- Provider 2 -->
        <div class="bg-white rounded-xl shadow-lg p-6 border">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg" style="background-color: var(--color-primary)">
              A
            </div>
            <div class="ml-4">
              <h3 class="text-xl font-semibold text-gray-900">Assurance Wireless</h3>
              <p class="text-gray-600">T-Mobile Network</p>
            </div>
          </div>
          <ul class="space-y-2 text-gray-700 mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Strong urban coverage
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Android smartphones
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 rounded-full mr-3" style="background-color: var(--color-primary)"></span>
              Unlimited texting
            </li>
          </ul